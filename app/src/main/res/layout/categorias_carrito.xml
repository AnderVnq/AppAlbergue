<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- BUSCADOR -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rounded_search_bar"
        android:padding="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="20dp">

        <!-- ImageView para el ícono con tamaño controlado -->
        <ImageView
            android:id="@+id/icono_lupa"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/buscar"
            android:contentDescription="Ícono de búsqueda"
            app:tint="@color/negro"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <!-- EditText para el campo de búsqueda -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Buscar productos o categorías"
            android:textColorHint="#A9A9A9"
            android:textColor="#000000"
            android:inputType="text"
            android:gravity="center_vertical"
            android:background="@android:color/transparent"
            android:padding="6dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>


    <!-- texto LISTADO e ICONO favoritos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="104dp"
        android:layout_marginHorizontal="25dp">

        <TextView
            android:id="@+id/texto_categorias"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Lista de Productos"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- ícono favoritos -->
            <ImageView
                android:id="@+id/segundo_icono"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/favorito"
                app:tint="@color/verde"
                android:contentDescription="Segundo ícono"
                android:layout_marginEnd="16dp" />
        </LinearLayout>
    </LinearLayout>


    <!-- CUERPO -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:columnCount="1"
            android:padding="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:rowCount="1">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#CCCCCC" />

            <!-- PRODUCTO 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="15dp"
                android:paddingHorizontal="0dp"
                android:gravity="center_vertical">

                <!-- Imagen del producto -->
                <ImageView
                    android:id="@+id/product_image1"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/productos_0001"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="5dp" />

                <!-- Contenedor del título y descripción -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alimento adultos"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product_description1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alimento para mascotas de edad adulta"
                        android:textSize="11sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- Contador con botones + y - -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Botón de restar cantidad -->
                    <Button
                        android:id="@+id/button_decrease1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/boton_circular"
                        android:text="-"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding = "0dp"
                        android:layout_marginEnd="8dp" />

                    <!-- TextView para mostrar la cantidad -->
                    <TextView
                        android:id="@+id/product_quantity1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginEnd="8dp" />

                    <!-- Botón de aumentar cantidad -->
                    <Button
                        android:id="@+id/button_increase1"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/boton_circular"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:padding = "0dp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Linea para separar productos -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#CCCCCC" />


            <!-- PRODUCTO 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="15dp"
                android:paddingHorizontal="0dp"
                android:gravity="center_vertical">

                <!-- Imagen del producto -->
                <ImageView
                    android:id="@+id/product_image2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/productos_0003"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="5dp" />

                <!-- Contenedor del título y descripción -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correa para mascotas"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product_description2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Correa para mascotas"
                        android:textSize="11sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- Contador con botones + y - -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Botón de restar cantidad -->
                    <Button
                        android:id="@+id/button_decrease2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/boton_circular"
                        android:text="-"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding = "0dp"
                        android:layout_marginEnd="8dp" />

                    <!-- TextView para mostrar la cantidad -->
                    <TextView
                        android:id="@+id/product_quantity2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginEnd="8dp" />

                    <!-- Botón de aumentar cantidad -->
                    <Button
                        android:id="@+id/button_increase2"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/boton_circular"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:padding = "0dp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Linea para separar productos -->
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#CCCCCC" />

            <!-- PRODUCTO 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="15dp"
                android:paddingHorizontal="0dp"
                android:gravity="center_vertical">

                <!-- Imagen del producto -->
                <ImageView
                    android:id="@+id/product_image3"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:src="@drawable/productos_0002"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="5dp" />

                <!-- Contenedor del título y descripción -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/product_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alimento cachorros"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_marginBottom="4dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/product_description3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alimento para cachorros"
                        android:textSize="11sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <!-- Contador con botones + y - -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Botón de restar cantidad -->
                    <Button
                        android:id="@+id/button_decrease3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/boton_circular"
                        android:text="-"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:padding = "0dp"
                        android:layout_marginEnd="8dp" />

                    <!-- TextView para mostrar la cantidad -->
                    <TextView
                        android:id="@+id/product_quantity3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="16sp"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_marginEnd="8dp" />

                    <!-- Botón de aumentar cantidad -->
                    <Button
                        android:id="@+id/button_increase3"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/boton_circular"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        android:textSize="18sp"
                        android:padding = "0dp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>


            <!-- Linea para separar productos -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#CCCCCC"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

        </GridLayout>

    </ScrollView>


    <!-- BOTONES -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="1"
        android:padding="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="215dp"  >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical"
            android:layout_weight="1">


            <Button
                android:id="@+id/donate_continuar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Continuar"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/verde"
                android:textSize="17sp"
                android:paddingVertical="7dp"
                android:paddingHorizontal="75dp"/>

            <Button
                android:id="@+id/donate_regresar"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Regresar"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/blanco"
                android:backgroundTint="@color/anaranjado"
                android:textSize="17sp"
                android:paddingVertical="7dp"
                android:paddingHorizontal="75dp"/>

        </LinearLayout>


    </GridLayout>

    <!-- Footer menu con íconos y texto -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:padding="10dp"
        android:layout_marginBottom="0dp">

        <!-- Item "INICIO" -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/inicio"
                android:contentDescription="Inicio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Item "DONAR" -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/huellacan"
                android:contentDescription="Donar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Donar"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Item "RESCATE" -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/rescate1"
                android:contentDescription="Rescate" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rescate"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Item "MAS" -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/mas_opciones"
                android:contentDescription="Más" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Más"
                android:gravity="center"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
